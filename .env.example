# LabLoop Healthcare Backend - Environment Configuration

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3001
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_GLOBAL_WINDOW=15 minutes
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_AUTH_WINDOW=15 minutes

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/labloop
DB_NAME=labloop
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME_MS=30000
DB_SERVER_SELECTION_TIMEOUT_MS=5000
DB_HEARTBEAT_FREQUENCY_MS=10000

# Optional Database Settings
# DB_REPLICA_SET=
# DB_AUTH_SOURCE=admin

# JWT Configuration
JWT_SECRET=labloop-jwt-secret-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=labloop-backend
JWT_AUDIENCE=labloop-app

# Redis Configuration (Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_CONNECT_TIMEOUT=10000
# REDIS_COMMAND_TIMEOUT=5000

# Email Configuration
EMAIL_PROVIDER=smtp
# EMAIL_API_KEY=
# SMTP_URL=

# SMS Configuration
SMS_PROVIDER=twilio
# SMS_API_KEY=
# SMS_FROM_NUMBER=

# Storage Configuration
STORAGE_PROVIDER=local
# STORAGE_BUCKET=
# STORAGE_REGION=
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=